		    LonLim     => [-90,-48],     # Min/Max Longitude
		    LatLim     => [25,52],       # Min/Max Latitude 
		    SatNum     => 8,             # Goes 8
		    SensorNum  => 4,             # Ir4
		    AscTime    => "03:00",       # Ascending Time is 03:00 GMT
		    DescTime   => "16:00" },     # Descending time is 16:00 GMT
